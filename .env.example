# Environment Configuration Template

# Server Configuration
NODE_ENV=development
PORT=3000

# GitHub Configuration (Required)
GITHUB_TOKEN=your_github_personal_access_token_here
REPO_OWNER=fabriziosalmi
REPO_NAME=audiolibri

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
SESSION_SECRET=your_super_secret_session_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# YouTube Import (Optional)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Database Configuration (if implementing user auth)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=audiolibri_editor
# DB_USER=your_db_user
# DB_PASS=your_db_password

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Monitoring & Analytics
# SENTRY_DSN=your_sentry_dsn_here
# GA_TRACKING_ID=your_google_analytics_id

# Content Security
MAX_FILE_SIZE=50mb
MAX_REQUEST_SIZE=100mb
UPLOAD_TIMEOUT=300000

# GitHub API Configuration
GITHUB_API_TIMEOUT=30000
MAX_BRANCH_NAME_LENGTH=50
MAX_COMMIT_MESSAGE_LENGTH=200

# Feature Flags
ENABLE_YOUTUBE_IMPORT=true
ENABLE_BULK_OPERATIONS=true
ENABLE_EXPORT_FEATURES=true
ENABLE_MONITORING=true
