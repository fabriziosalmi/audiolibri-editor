{
  "name": "audiolibri-editor",
  "version": "1.0.0",
  "description": "Web application to edit audiolibri JSON data",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "echo \"No linting configured\" && exit 0",
    "docker:build": "docker build -t audiolibri-editor .",
    "docker:run": "docker run -p 3000:3000 --env-file .env audiolibri-editor",
    "docker:compose": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "body-parser": "^1.20.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.22.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "octokit": "^3.1.1",
    "yt-dlp-wrap": "^2.3.12",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "audiolibri",
    "editor",
    "github",
    "json",
    "web-app"
  ],
  "author": "Fabrizio Salmi",
  "license": "MIT"
}